{
	"name": "be-like-jekyll",
	"displayName": "Be Like Jekyll",
	"description": "Create new Jekyll-like post from template",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"author": {
		"name": "Hernawan Faiz Abdillah",
		"email": "faiz@xifroon.space",
		"url": "https://xifroon.space"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Abdillah/be-like-jekyll"
	},
	"bugs": {
		"url": "https://github.com/Abdillah/be-like-jekyll/issues"
	},
	"publisher": "Abdillah",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.beLikeJekyll.createPost"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Be Like Jekyll",
				"properties": {
					"belikejekyll.template.path": {
						"type": "string",
						"default": ".vscode/template/post",
						"description": "Path to template file",
						"scope": "window"
					},
					"belikejekyll.instance.filename": {
						"type": "string",
						"default": "%yyyy%-%mm%-%dd%-%filename%",
						"description": "Filename pattern, use placeholders: %yyyy%, %mm%, %dd%, %hh%, %ii%, %ss%, %filename%",
						"scope": "window"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.beLikeJekyll.createPost",
				"title": "New Post"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.beLikeJekyll.createPost",
					"group": "navigation@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
